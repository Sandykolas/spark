<!--
  * Settings for Ranger plugins to connect to the Ranger Admin.
  -->

<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration xmlns:xi="http://www.w3.org/2001/XInclude">
    <property>
        <name>ranger.plugin.hive.service.name</name>
        <value>hive-cluster3</value>
        <description>Name of the Ranger service containing policies for this YARN instance</description>
    </property>
    <property>
        <name>ranger.plugin.hive.policy.rest.url</name>
        <value>http://hadoop519.lt.163.org:6080,http://hadoop520.lt.163.org:6080</value>
        <description>URL to Ranger Admin</description>
    </property>
    <property>
        <name>ranger.plugin.hive.policy.cache.dir</name>
        <value>/home/hadoop/ranger/hive-cluster3/policycache</value>
        <description>必须事先创建，并赋可读写权限</description>
    </property>
</configuration>
